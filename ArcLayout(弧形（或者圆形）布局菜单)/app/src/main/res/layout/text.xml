<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent">


    <com.bob.library.ArcLayout
        android:id="@+id/text_arc_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:arc_origin="bottom"
        app:arc_radius="@dimen/layout_radius_medium"
        app:arc_axisRadius="@dimen/layout_child_offset_medium"
        android:layout_marginBottom="30dp"
        android:visibility="gone"
        >

        <Button
            style="@style/Item.Medium"
            android:text="A"
            android:background="@drawable/light_blue_oval_selector"
            />

        <Button
            style="@style/Item.Medium"
            android:text="B"
            android:background="@drawable/cyan_oval_selector"
            />

        <Button
            style="@style/Item.Medium"
            android:text="C"
            android:background="@drawable/teal_oval_selector"
            />

        <Button
            style="@style/Item.Medium"
            android:text="D"
            android:background="@drawable/green_oval_selector"
            />

        <Button
            style="@style/Item.Medium"
            android:text="E"
            android:background="@drawable/light_green_oval_selector"
            />

    </com.bob.library.ArcLayout>

    <Button
        android:id="@+id/text_fab"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="8dp"
        android:text="+"
        android:textSize="24sp"
        android:textColor="@color/white"
        android:background="@drawable/path_fab"
        />




</RelativeLayout>